<div class="modal fade" id="_sendmsgModal" tabindex="-1" role="dialog" aria-labelledby="_sendmsgModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title pull-left" id="_sendmsgModalLabel">Conversation</h5>
                <button type="button" class="close pull-right" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <div class="clearfix"></div>
            </div>

            <div class="modal-body" id="">
                <form id="formSendMsg" role="form">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Conversation With:</label>
                            <select id="ManagerId" name="ManagerId" class="form-control">
                            </select>
                        </div>
                    </div>
                    <div class="col-md-12" style="overflow: auto; max-height: 500px;min-height: 0px;">
                        <div class="contact-card-section ptb-50">
                            <div class="container">
                                <div class="row">
                                    <div class="col-lg-12 ">
                                        <div class="row">
                                            <div class="col-md-12 col-sm-6">
                                                <div class="contact-card ">
                                                    <i class="bx bx-mail-send"></i>

                                                    <div class="col-md-12" style="border-bottom:1px solid grey !important">
                                                        <div class="job-card-two" style="padding:20px 0px !important;margin-bottom:0px !important;">
                                                            <div class="row align-items-center" id="Messages">

                                                            </div>
                                                        </div>
                                                    </div>
                                                    @*<p class="contact-card category-card">
                                                            No comments Yet!
                                                        </p>*@

                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="modal-value">
                            <input hidden id="PTaskId" name="PTaskId" />
                        </div>
                        <div class="row" id="">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label>Type Message</label>
                                    <textarea required id="Message" rows="3" name="Message" style="width: 100%; height: 100px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <button type="submit" id="formsubmit" class="btn  btn-sm btn-primary">
                                    <i class="fa fa-comment-alt fa-fw"></i> Send Message
                                </button>
                            </div>
                            <div class="col-md-8">
                                <span style="color: white;background-color: #8bd8bd;font-weight: 900;" id="submitresult"></span>
                            </div>
                        </div>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>

