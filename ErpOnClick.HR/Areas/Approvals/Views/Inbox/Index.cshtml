@using ErpOnClick.DAL.Models
@using ErpOnClick.ErpMain.Resources
@inject LocService SharedLocalizer

@{

    var status = Model.status;

}

<div class="card card-default card-outline">
    <input id="status" type="text" hidden value="@status" />
    <div class="card-header">
        <h2 class="card-title">
            @SharedLocalizer.GetLocalizedHtmlString("Inbox")
        </h2>

    </div>

    <div class="card-footer pb-0 pt-2 text-sm">
        <form id="frmSearch">
            <div class="row">
                <div class="col-sm-3">
                    <div class="form-group ">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Date From")</label>
                        <input class="form-control DatePicker" type="text" name="DateFrom" id="DateFrom" />
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group ">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Date To")</label>
                        <input class="form-control DatePicker" type="text" name="DateTo" id="DateTo" />
                    </div>
                </div>
                <div class="col-sm-2">
                    <label style="margin-top:37px;"> Pending
                        <input type="radio" name="ApprovalStatus" value="007001" checked="checked"/>
                    </label>
                </div>
                <div class="col-sm-2">
                    <label style="margin-top:37px;">
                        @SharedLocalizer.GetLocalizedHtmlString("Completed")
                        <input type="radio" name="ApprovalStatus" value="007002" />
                    </label>
                </div>
                <div class="col-sm-2">
                    <label style="margin-top:37px;">
                        @SharedLocalizer.GetLocalizedHtmlString("Rejected")
                        <input type="radio" name="ApprovalStatus" value="007003" />
                    </label>
                </div>

                <div style="display:none">
                    <button type="submit" class="btn btn-default ">@SharedLocalizer.GetLocalizedHtmlString("Refresh")</button>
                </div>
            </div>
        </form>
    </div>

    <div class="card-body">
        <div id="divList"></div>

    </div>
</div>


@section scripts{
    <script>
        var applicationName = getApplicationName();

        $(function () {
            var date = new Date();
            var dd = String(date.getDate()).padStart(2, '0');
            var mm = String(date.getMonth() + 1).padStart(2, '0')
            var yyyy = date.getFullYear();
            var premonth = parseInt(mm) - 1;
            var start = yyyy + '-' + mm + '-' + '01';
            today = yyyy + '-' + mm + '-' + dd;
            $('#DateFrom').val(start);
            $('#DateTo').val(today);

            BindGrid();


            $('.DatePicker').datepicker({
                format: 'dd-M-yyyy',
                autoclose: true
            });

            
        });

       

        //$('#frmSearch').find('input, select').change(() => {
        $('#frmSearch').change(() => {
            BindGrid();
        });

        //$('#frmSearch').submit(function (e) {
        //    e.preventDefault();
        //    BindGrid();
        //});
        $(':radio[name=ApprovalStatus]').change(function () {
            // read the value of the selected radio
            var value = $(this).val();            
            $('#status').val(value);

            BindGrid();
        });
        function BindGrid() {

            var status = $('#status').val();
            var datefrom = $('#DateFrom').val();
            var dateto = $('#DateTo').val();
            $('#divList').html('<h5 class="margin-0"><p><i class="fal fa-spinner fa-spin fa-fw"></i> Please wait while data is loading...</p></h5>');
            $.ajax({
                url: applicationName + 'Approvals/Inbox/_list',
                data: { status: status, DateFrom: datefrom, DateTo: dateto },
                success: function (data) {
                    $('#divList').html('').html(data);
                }
            })
        };

    </script>
}
