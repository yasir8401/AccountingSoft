@using ErpOnClick.DAL.Models
@using ErpOnClick.ErpMain.Resources
@inject LocService SharedLocalizer

@{
    ApplicationParameters ApplicationParameterDetail = Model.ApplicationParameterIdDetail;
    bool isEdit = (ApplicationParameterDetail != null);
}



<form id="frmEdit" role="form">
    <input type="hidden" id="ACTION_TYPE" name="ACTION_TYPE" value="@(isEdit ? "update" : "save")" />
    <input type="hidden" id="ApplicationParameterId" name="ApplicationParameterId" class="form-control" value="@(ApplicationParameterDetail != null ? ApplicationParameterDetail.ApplicationParameterId : 0)" @(isEdit ? "readonly" : "") min="3" maxlength="3">

    <input type="hidden" id="FinancialYearStartMonth" name="FinancialYearStartMonth" class="form-control" value="@(ApplicationParameterDetail != null ? ApplicationParameterDetail.FinancialYearStartMonth : 0)" @(isEdit ? "readonly" : "") min="3" maxlength="3">
    <input type="hidden" id="FinancialYearStartDate" name="FinancialYearStartDate" class="form-control" value="@(ApplicationParameterDetail != null ? ApplicationParameterDetail.FinancialYearStartDate : 0)" @(isEdit ? "readonly" : "") min="3" maxlength="3">
    <input type="hidden" id="FinancialYearEndMonth" name="FinancialYearEndMonth" class="form-control" value="@(ApplicationParameterDetail != null ? ApplicationParameterDetail.FinancialYearEndMonth : 0)" @(isEdit ? "readonly" : "") min="3" maxlength="3">
    <input type="hidden" id="FinancialYearEndDate" name="FinancialYearEndDate" class="form-control" value="@(ApplicationParameterDetail != null ? ApplicationParameterDetail.FinancialYearEndDate : 0)" @(isEdit ? "readonly" : "") min="3" maxlength="3">

    <div class="card card-default card-outline col-lg-8">

        <div class="card-header">
            <h2 class="card-title">
                @SharedLocalizer.GetLocalizedHtmlString("Report Setup")
            </h2>
            <!-- tools box -->
            <div class="card-tools fa-pull-right">
                <button type="submit" class="btn  btn-sm btn-primary">
                    <i class="fal fa-save fa-fw"></i> @SharedLocalizer.GetLocalizedHtmlString("Save")
                </button>
                <a href="~/Finance/Customers" type="button" class="btn  btn-sm btn-default">
                    <i class="fal fa-arrow-left fa-fw"></i> @SharedLocalizer.GetLocalizedHtmlString("Return")
                </a>
            </div>
            <!-- /. tools -->
        </div>
    </div>
    <div class="card card-default card-outline col-lg-8">
        <div class="card-header">
            <h2 class="card-title">
                @SharedLocalizer.GetLocalizedHtmlString("Report Setup Detail")
            </h2>
        </div>
        <div class="card-body">

            <div class="row">

                <div class="col-sm-6">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Company Name Eng")</label>
                        <input type="text" id="CompanyNameEn" name="CompanyNameEn" class="form-control"
                               value="@(ApplicationParameterDetail!=null?ApplicationParameterDetail.CompanyNameEn: null)"
                               required maxlength="70">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Company Name Arb")</label>
                        <input type="text" id="CompanyNameAr" name="CompanyNameAr" class="form-control"
                               value="@(ApplicationParameterDetail!=null?ApplicationParameterDetail.CompanyNameAr: null)"
                               required maxlength="70">
                    </div>
                </div>

            </div>

            <div class="row">

                <div class="col-sm-6">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Phone1")</label>
                        <input type="text" id="CompanyPhone1" name="CompanyPhone1" class="form-control"
                               value="@(ApplicationParameterDetail!=null?ApplicationParameterDetail.CompanyPhone1: null)"
                               required maxlength="16">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Phone2")</label>
                        <input type="text" id="CompanyPhone2" name="CompanyPhone2" class="form-control"
                               value="@(ApplicationParameterDetail!=null?ApplicationParameterDetail.CompanyPhone2: null)"
                               maxlength="16">
                    </div>
                </div>
            </div>
            <div class="row">

                <div class="col-sm-6">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Address Eng")</label>
                        <input type="text" id="CompanyAddressEn" name="CompanyAddressEn" class="form-control"
                               value="@(ApplicationParameterDetail!=null?ApplicationParameterDetail.CompanyAddressEn: null)"
                               maxlength="500">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Address Arb")</label>
                        <input type="text" id="CompanyAddressAr" name="CompanyAddressAr" class="form-control"
                               value="@(ApplicationParameterDetail!=null?ApplicationParameterDetail.CompanyAddressAr: null)"
                               maxlength="50">
                    </div>
                </div>
            </div>
            <div class="row">

                <div class="col-sm-6">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Signature Manager 1")</label>
                        <input type="text" id="ReportFooterSignatureManager1" name="ReportFooterSignatureManager1" class="form-control"
                               value="@(ApplicationParameterDetail!=null?ApplicationParameterDetail.ReportFooterSignatureManager1: null)"
                               required maxlength="90">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Signature Manager 2")</label>
                        <input type="text" id="ReportFooterSignatureManager2" name="ReportFooterSignatureManager2" class="form-control"
                               value="@(ApplicationParameterDetail!=null?ApplicationParameterDetail.ReportFooterSignatureManager2: null)"
                               maxlength="90">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <label>@SharedLocalizer.GetLocalizedHtmlString("Logo")</label>
                    @if (ApplicationParameterDetail != null && ApplicationParameterDetail.CompanyLogoUrl != null)
                    {
                        <span class="form-control border-0">
                            <a href="~/Files/@ApplicationParameterDetail.CompanyLogoUrl" download="">@SharedLocalizer.GetLocalizedHtmlString("DownloadLogo")</a>
                            <input type="text" hidden id="CompanyLogoUrl" value="@ApplicationParameterDetail.CompanyLogoUrl" name="CompanyLogoUrl" class="form-control">
                        </span>
                    }
                    else
                    {
                        <input type="file" id="FileToUpload" name="FileToUpload" class="form-control" required>
                    }
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Website")</label>
                        <input type="text" id="CompanyWebsite" name="CompanyWebsite" class="form-control"
                               value="@(ApplicationParameterDetail!=null?ApplicationParameterDetail.CompanyWebsite: null)"
                               maxlength="90">
                    </div>
                </div>

            </div>
            <div class="col-sm-6 d-none">
                <div class="form-group">
                    <label>@SharedLocalizer.GetLocalizedHtmlString("Active Status")</label>
                    <select id="IsEnable" name="IsEnable" class="form-control">
                        @*<option></option>*@
                        <option value="True" @(ApplicationParameterDetail != null && ApplicationParameterDetail.IsEnable == true ? "selected" : "")>Active</option>
                        <option value="False" @(ApplicationParameterDetail != null && ApplicationParameterDetail.IsEnable == false ? "selected" : "")>Inactive</option>
                    </select>
                </div>
            </div>

        </div>
    </div>







</form>





